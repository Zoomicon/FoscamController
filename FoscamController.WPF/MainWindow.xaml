<Window x:Class="Camera.Foscam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" x:Name="imgStream"></Image>
        <DockPanel Grid.Row="1" LastChildFill="False">
            <Button Click="btnUp_Click_1" DockPanel.Dock="Top" x:Name="btnUp" HorizontalAlignment="Center">Up</Button>
            <Button Click="btnDown_Click_1" DockPanel.Dock="Bottom" x:Name="btnDown" HorizontalAlignment="Center">Down</Button>
            <Button Click="btnRight_Click_1" DockPanel.Dock="Right" x:Name="btnRight" HorizontalAlignment="Center" Height="20" VerticalAlignment="Bottom">Right</Button>
            <Button Click="btnLeft_Click_1" DockPanel.Dock="Left" x:Name="btnLeft" HorizontalAlignment="Center" Height="20" VerticalAlignment="Top">Left</Button>

        </DockPanel>

    </Grid>
</Window>
